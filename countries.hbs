{{#each countries}}
<div class="card">
    <h1 class="card-title">{{name.common}}</h1>
  <div class="card-body">
    <div class="country-info">
        <p class="capital">Capital: {{capital}}</p>
        <p class="population">Population: {{population}}</p>
        <p class="lang">Language:</p>
        <ul class="lang-list">
          {{#each languages}}
            <li class="lang-list-item">{{this}}</li>
          {{/each}}
        </ul>
    </div>
    <div class="country-flag">
         <img src="{{flags.svg}}" alt="Flag of {{name.common}}">
    </div>
  </div>
</div>
{{/each}}